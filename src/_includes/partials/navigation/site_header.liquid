<header class="site-header">
    <div class="cluster">
        <div class="logo-wrapper">
            <a href="/" class="logo-link">move with cait</a>
        </div>
        <nav aria-label="Main Navigation">
            <ul>
                {% for item in navigation.items %}
                    <li>
                        {% if item._type == 'linkList' %}
                            <div x-data x-popover class="popover">
                                <button x-popover:button type="button" class="nav-link popover-button">
                                    {{- item.label -}}
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        height="14"
                                        width="14"
                                        aria-hidden="true"
                                        viewBox="0 0 512 512"
                                    >
                                        <path d="M239 401c9.4 9.4 24.6 9.4 33.9 0L465 209c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-175 175L81 175c-9.4-9.4-24.6-9.4-33.9 0s-9.4 24.6 0 33.9L239 401z" />
                                    </svg>
                                </button>
                                <ul x-popover:panel x-cloak class="popover-panel | flow" data-tempo="prestissimo">
                                    {% for child_item in item.links %}
                                        <li>
                                            {% sanity_link child_item "nav-link" %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% else %}
                            {% sanity_link item "nav-link" %}
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
</header>
